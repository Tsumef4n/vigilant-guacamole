{% extends 'inc/layout.shop.twig' %}
{% block content %}
  <div class="col-sm-12">

    {% for product in products %}
      <div class="col-sm-6 col-md-4 col-lg-3">
        <!-- <div class="well"> -->
        <div class="product" href=# data-featherlight="#fl{{ product.id }}">
          <div class="product-item">
            <div class="product-thumb"><img class="product-img-thumb" src="../images/products/{{ product.id }}.{{ product.image }}"></div>
            <h3>{{ product.name }}</h3>
          </div>
        </div>
        <!-- </div> -->
      </div>
    {% else %}
      <p>Keine Produkte gefunden</p>
    {% endfor %}

  </div>

  {% for product in products %}
    {{ include('inc/modal.product.twig', {
          id: product.id,
          name: product.name,
          description: product.description,
          image: product.image
          }) }}
  {% endfor %}

{% endblock %}

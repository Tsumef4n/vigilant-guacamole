{% extends 'inc/layout.main.twig' %}

{% block content %}

      <form class="form-signin" action="{{ path_for('auth.password.change') }}" method="post">
        <h2 class="form-signin-heading">Passwort ändern</h2>

        <div class="form-group">
              <label for="password_old">Aktuelles Passwort</label>
              <input type="password" name="password_old" id="password_old" class="form-control" placeholder="Password" required>
        </div>
        {% if errors.password_old %}
           <span class="help-block">{{ errors.password_old | first }}</span>
        {% endif %}

        <div class="form-group">
              <label for="password">Neues Passwort</label>
              <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
        </div>
        {% if errors.failedLogin %}
           <span class="help-block">{{ errors.failedLogin | first }}</span>
        {% endif %}

        <button class="btn btn-lg btn-primary btn-block" type="submit">Passwort ändern</button>

        {{ csrf.field | raw }}
      </form>

{% endblock %}

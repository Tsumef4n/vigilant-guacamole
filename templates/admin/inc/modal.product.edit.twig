<div class="lightbox" id="fl{{ id }}">
  <div class="test">
    <form class="form-signin" action="{{ path_for('admin.shop') }}/{{ id }}" method="post" enctype="multipart/form-data">
      <h4 class="modal-title">Eintrag bearbeiten</h4>
      <div class="modal-body">
        <div class="form-group">
          <label for="name-{{ id }}">Name:</label>
          <input type="text" class="form-control" id="name-{{ id }}" name="name" value="{{ name }}" maxlength="250" required>
        </div>
        <div class="form-group">
          <label for="description-{{ id }}">Beschreibung:</label>
          <textarea class="form-control noresize" id="description-{{ id }}" rows="10" required name="description">{{ description }}</textarea>
        </div>
        <div class="form-group">
          <label for="category-{{ id }}">Kategorie:</label>
          <select id="maker-{{ id }}" name="maker_id">
            {% for group in groups %}
              <optgroup label="{{ group.name }}">
                {% for category in categories if category.parent == group.id %}
                  <option value="{{ category.id }}" {% if category.id == maker_id %} selected="selected" {% endif %}>{{ category.name }}</option>
                {% endfor %}
              </optgroup>
            {% endfor %}
          </select>
        </div>
        <div class="form-group">
          <label for="file-{{ id }}">
            <span class="glyphicon glyphicon-save"></span>
            &ensp; Neues Bild hochladen (max. 1MB)
          </label>
          <input type="file" id="file-{{ id }}" name="file" accept=".bmp, .gif, .jpeg, .jpg, .png"></input>
          <h4>
            <span class="label label-default download-pic col-md-pull-1"></span>
          </h4>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-success" name="submit">Speichern</button>
        <button type="button" class="btn btn-danger featherlight-close" onclick="featherlight.close();return false;" name="close">Abbrechen</button>
      </div>
      {{ csrf.field | raw }}
    </form>
  </div>
</div>

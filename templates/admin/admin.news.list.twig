{% extends 'admin/inc/layout.main.twig' %}
{% block content %}
  <div class="col-sm-12">
    <div class="row">
      <div class="col-md-6">
        <h2>News</h2>
      </div>
      <div class="col-md-6 text-right">
        <a class="btn btn-default btn-primary" href="{{ path_for('admin.news.new') }}">Neue News</a>
      </div>
    </div>
    <div class="table-responsive">
      <!-- <table class="table table-striped"> -->
      <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
          <tr>
            <th>ID</th>
            <th>Titel</th>
            <th>Text</th>
            <th>Letzte Ã„nderung</th>
          </tr>
        </thead>
        <tbody>
          {% for entry in news %}
            <tr>
              <td>{{ entry.id }}
                <a href="{{ path_for('admin.news.edit', { 'id': entry.id }) }}">EDIT</a>
              </td>
              <td>{{ entry.title }}</td>
              <td>
                {% if entry.text | length > 250 %}
                  {{ entry.text|slice(0,250) }}
                  ...
                {% else %}
                  {{ entry.text }}
                {% endif %}
              </td>
              <td>{{ entry.updated_at }}</td>
            </tr>
          {% else %}
            <tr>
              <td colspan=4>Keine News gefunden</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endblock %}

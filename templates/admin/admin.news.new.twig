{% extends 'admin/inc/layout.main.twig' %}
{% block content %}
  <div class="row">

    <form class="col-sm-8 col-sm-offset-2" action="{{ path_for('admin.news.new') }}" method="post">
      <fieldset>
        <legend>Neue News anlegen</legend>

        <div class="form-group">
          <label for="title">Titel</label>
          <input type="text" name="title" id="title" class="form-control" placeholder="Toller Titel" value="{{ old.title }}" autocomplete="off" required>
        </div>

        <div class="form-group">
          <label for="text">Inhalt</label>
          <textarea class="form-control" id="text" name="text" autocomplete="off"></textarea>
        </div>

        <div class="form-group text-center">
          <button type="submit" name="btn-send" class="btn btn-success">Anlegen</button>
          <a class="btn btn-default btn-danger" href="{{ path_for('admin.news.list') }}">Abbrechen</a>
        </div>

        {{ csrf.field | raw }}
      </form>

    </fieldset>
  </form>
</div>
{% endblock %}

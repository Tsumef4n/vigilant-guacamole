<div class="lightbox" id="fl{{ id }}">
  <form class="form-signin" action="{{ path_for('admin.list') }}" method="post">
    <h4 class="modal-title">Neuer Eintrag</h4>
    <div class="modal-body">
      <div class="form-group">
        <label for="titel-0">Name:</label>
        <input type="text" class="form-control" id="titel-0" name="title" value="{{ name }}" maxlength="250" required>
      </div>
      <div class="form-group">
        <label for="textblock-0">Text:</label>
        <textarea class="form-control noresize" id="textblock-0" rows="10" required
                  name="content">{{ description }}</textarea>
      </div>
    </div>
    <div class="modal-footer">
      <button type="submit" class="btn btn-success" name="submit">Speichern
      </button>
    </div>
  {{ csrf.field | raw }}
  </form>
</div>

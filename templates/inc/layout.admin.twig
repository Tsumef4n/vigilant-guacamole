{% include "inc/layout.header.twig" %}

<div class="container-fluid">
  <div class="row">
    <!-- Left sided nav-bar -->
    <div class="col-sm-3 col-md-2 sidebar">
      <ul class="nav nav-sidebar">
        <!-- Moeglicherweise als jquery fuer Unterpunkte? -->
        <li {% if 0 == id %} class="active"{% endif %}><a href="{{ path_for('admin.list') }}">Alle Produkte <span class="sr-only">(current)</span></a></li>
        <!-- TODO: 2 LAYOUTS!!! -->
      </ul>
      <ul class="nav nav-sidebar">
        {% for maker in makers if maker.status == 1 %}
          <li {% if maker.id == id %} class="active"{% endif %}><a href="{{ path_for('admin.list') }}/{{ maker.id }}">{{ maker.name }}</a></li>
          {% endfor %}
      </ul>
      <ul class="nav nav-sidebar">
        {% for maker in makers if maker.status == 0 %}
          <li {% if maker.id == id %} class="active"{% endif %}><a href="{{ path_for('admin.list') }}/{{ maker.id }}">{{ maker.name }}</a></li>
          {% endfor %}
      </ul>
    </div>
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
      {% include "inc/layout.flash.twig" %}

      {% block content %} {% endblock %}

      {% include "inc/layout.footer.twig" %}
    </div>
  </div>
</div>
